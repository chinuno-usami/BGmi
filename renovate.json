{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>Trim21/renovate-config",
    "github>Trim21/renovate-config:monthly",
    "github>Trim21/renovate-config:app"
  ],
  "enabledManagers": [
    "poetry",
    "github-actions"
  ],
  "baseBranches": [
    "master"
  ],
  "rangeStrategy": "pin",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "wcwidth"
      ],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "deps-prod",
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "groupName": "deps-dev",
      "matchManagers": [
        "poetry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "semanticCommitScope": "deps-dev"
    }
  ]
}
