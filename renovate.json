{
  "extends": [
    "@trim21",
    "@trim21:poetry",
    "@trim21:monthly",
    "@trim21:app"
  ],
  "baseBranches": [
    "master"
  ],
  "rangeStrategy": "pin",
  "separateMajorMinor": true,
  "separateMinorPatch": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "wcwidth"
      ],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "deps-prod",
      "matchDepTypes": [
        "dependencies"
      ],
      "semanticCommitScope": "deps"
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "separateMinorPatch": false,
      "groupName": "deps-dev",
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "semanticCommitScope": "deps-dev"
    }
  ]
}
